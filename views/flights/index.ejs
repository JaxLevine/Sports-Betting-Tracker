<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight #</th>
      <th>Departure Airport</th>
      <th>Departure Date/Time</th>
      <th>Arrival Airport</th> 
      <th>Arrival Date/Time</th> 
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departureAirport %></td>
        <td><%= f.departs.toLocaleString() %></td>
        <td><%= f.arrivalAirport %></td>
        <td><%= f.arrival.toLocaleString() %></td>
        <td><a href="/flights/<%= f._id %>">Details</a></td>
      </tr>
    <%}); %>
  </tbody>
</table>

<%- include('../partials/header') %>
